<header>
<h1>New Application</h1>
</header>

<body>
  <section id="application-form">
  <%= form_with url: '/applications', method: :post, local: true do |form| %>
<p>  <%= form.label :name %>
  <%= form.text_field :name %></p>
<p>  <%= form.label :address %>
  <%= form.text_field :address %></p>
<p>  <%= form.label :city %>
  <%= form.text_field :city %></p>
<p>  <%= form.label :state %>
  <%= form.text_field :state %></p>
<p>  <%= form.label :zipcode %>
  <%= form.text_field :zipcode %></p>
<p>  <%= form.submit %></p>
<%end%>
</section>
</body>
